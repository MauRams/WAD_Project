<!DOCTYPE html>
<html>
<head>
 <title>Table-Game-Portal</title>
<!-- Mobile viewport optimized -->
  <meta name="viewport" content="width=device-width">
<!-- CSS -->
    <link href="files/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href='http://fonts.googleapis.com/css?family=Slabo+27px' rel='stylesheet' type='text/css'>
    <link href='http://fonts.googleapis.com/css?family=Fjalla+One' rel='stylesheet' type='text/css'>
<!-- CSS Own -->
<link href="style.css" rel="stylesheet" type="text/css" />
<link href="style_mod.css" rel="stylesheet" type="text/css"/>
<link href="style_login.css" rel="stylesheet" type="text/css" />
<!--Scripts-->
  <script src="files/jquery-1.11.3.js" type="text/javascript"></script>
  <script src="files/bootstrap.js" type="text/javascript"></script>
<!--My own Scripts-->
  <script src="js/script.js" type="text/javascript"></script>
  <script>
//attaching handler to the form
 /* attach a submit handler to the form */
    $("#login").submit(function(event) {

      /* stop form from submitting normally */
      event.preventDefault();

      /* get some values from elements on the page: */
      var $form = $( this ),
          url = $form.attr( 'action' );

      /* Send the data using post */
      var posting = $.post( url, { email: $('#email').val(), password: $('#password').val() } );

      /* Alerts the results */
      posting.done(function( data ) {
        alert('success');
      });
    });




  function Switch(form){
    //login_form, singup_form
    if(form == 'login'){
      $("#singup_form").slideToggle("slow");
      setTimeout(function(){
      $("#login_form").slideToggle("slow");
      }, 1000);
    }
    else{
      $("#login_form").slideToggle("slow");
      setTimeout(function(){
      $("#singup_form").slideToggle("slow");
      }, 1000);
    }

  };
  </script>
</head>
<body>
<div class="container color_background nopad">

    <!-- NavBar Starting -->
<nav class="navbar navbar-default navbar-inverse default_nav">
  <div class="container-fluid">
<!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <a class="navbar-brand text_decor_brand" href="#"><img src="newImage/smile_icon.png" class="ico"/>
        Table-Game-Portal
      </a>
    </div>  
 <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
  <div class="col-md-4"></div>
<div class="col-md-4">
  
  <!-- LOGIN FORM -->
  <div class='form' id='login_form'>
  <h1><span class="fa fa-sign-in"></span> Login</h1>
  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>



  <form id='login' action="/login" method="post">
    <div class="form-group">
      <label>Email</label>
      <input id='email' type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input id='password' type="password" class="form-control" name="password">
    </div>

    <button type="submit" class="btn btn-warning btn-lg">Login</button>
  </form>



  <hr>
  <p>Need an account? <a href="javascript:Switch('singup')">Signup</a></p>
  <p>Or go <a href="/">home</a>.</p>
  </div>

  <!-- Singup FORM -->
  <div class='form' id='singup_form'>
  <h1><span class="fa fa-sign-in"></span> Singup</h1>
  <!-- show any messages that come back with authentication -->
  <% if (message.length > 0) { %>
    <div class="alert alert-danger"><%= message %></div>
  <% } %>


  <form action="/signup" method="post">
    <div class="form-group">
      <label>Email</label>
      <input type="text" class="form-control" name="email">
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" class="form-control" name="password">
    </div>
    <button type="submit" class="btn btn-warning btn-lg">Signup</button>
  </form>



  <hr/>
  <p>Already have an account? <a href="javascript:Switch('login')">Login</a></p>
  <p>Or go <a href="/">home</a>.</p>
  </div>
</div>
<div class="col-md-4"></div>
</div>
<footer class="text-center">
  NCI Team 2015 C.
<br/>
</footer>
</div>
</body>
</html>